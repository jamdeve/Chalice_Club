---
    import slide1 from '../assets/img/chalice-slide1.jpg';
    import slide2 from '../assets/img/chalice-slide2.jpg';
    import slide3 from '../assets/img/chalice-slide3.jpg';
    import slide4 from '../assets/img/chalice-slide4.jpg';

    import logo from '../assets/img/Logo.png';


    const images = [
        slide1,slide2,slide3,slide4
    ];

    let currentImageIndex = 0;

    function changeSlide()
    {
        currentImageIndex++;
        if (currentImageIndex > images.length)
        {
            currentImageIndex = 0;
        }
        
    }

    setInterval(changeSlide,3000);
---

<script>
    document.addEventListener('DOMContentLoaded', () => {
      const slides = [
        { src: '../../public/imagenes/chalice-slide1.jpg' },
        { src: '../../public/imagenes/chalice-slide2.jpg' },
        { src: '../../public/imagenes/chalice-slide3.jpg' },
        { src: '../../public/imagenes/chalice-slide4.jpg' }
      ];
  
      let currentSlideIndex = 0;
      let offsetY = 0;
      const backgroundImg = document.getElementById("background");
  
      function changeSlide() {
        currentSlideIndex = (currentSlideIndex + 1) % slides.length;
        backgroundImg.style.opacity = "0";
        setTimeout(() => {
            offsetY = 0;
            backgroundImg.setAttribute("src",slides[currentSlideIndex].src) // Cambiamos la imagen
            backgroundImg.style.opacity = "1"; // Hacemos la imagen visible
        }, 500); // Esperamos 500ms antes de cambiar la imagen, para que la transición se aplique
      }
  
      function moveObj() {
        offsetY += 0.35;
        backgroundImg.style.transform = `translateY(${offsetY}px) scale(${1.3})` ;
        requestAnimationFrame(moveObj);
      }
  
      requestAnimationFrame(moveObj);
      setInterval(changeSlide, 5000);
    });
  </script>

<div class="hero">
    <img class="background swing-right" id="background" src={images[currentImageIndex].src} alt="">
    <div class="wrapper hero-wrapper">
        <div class="hero-content">
            
            <h1 class="tittle">
                CHALICE CLUB
            </h1>
            <h2 class="subtittle">
                Las noches más elegantes
            </h2>
            <img class="logo" src={logo.src} width={200} height={200} alt="Logo" />
        </div>
    </div>
</div>

